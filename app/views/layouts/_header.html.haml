.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to '',  root_path, class: "brand"
      .nav-collapse
        %ul.nav
          %li.span1
          %li
            = link_to 'About',  about_path
          %li
            %a{:href => "#"} Blog
        %ul.nav.pull-right
          - if user_signed_in?
            %li
              %ul.nav.pull-right
                %li.dropdown.profileToggle
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = image_tag(current_user.image.url, :class => "img-circle profileHeader", :style => "thumb")
                    %i.icon-chevron-down
                  %ul.dropdown-menu
                    %li
                      = link_to '<i class="icon-user"></i> Edit Profile'.html_safe, edit_user_registration_path
                    %li
                      %a{:href => ""}
                        %i.icon-flag
                        Help
                    %li.divider
                    %li
                      = link_to '<i class="icon-off"></i> Logout'.html_safe, destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Login',  new_user_session_path