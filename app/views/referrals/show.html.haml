.row
  .span6.offset3
    .well
      - if current_user == @referral.user
        = link_to 'Edit', edit_referral_path(@referral), class: "btn btn-link"
        = link_to 'x', @referral, method: :delete, data: { confirm: 'Are you sure?' }, class: "close"
      %h4= @referral.location
      %p.lead= @referral.eventdate
      %ul
        %li= @referral.description
        %li= @referral.referraltype
        %li= @referral.coverage
        %li= @referral.budget
      %small
        = @referral.user.name
      %br/
    = link_to 'Back', root_path, class: "btn"