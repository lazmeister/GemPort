%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.full_error :image_file_size, class: "alert alert-error"
  = f.full_error :image_content_type, class: "alert alert-error"
  = f.input :image, as: :file, label: "Upload an image"
  = f.input :name, :autofocus => true
  = f.input :email
  = f.input :website
  = f.input :city, input_html: { value: request.location.city }
  = f.input :country, input_html: { value: request.location.country }
  = f.input :phone
  = f.input :notif_referrals, collection: [ "on", "off" ], hint: "Notification of Referrals"
  = f.input :notif_assistant, collection: [ "on", "off" ], hint: "Notification of Assistants"
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.submit "Sign up", class: "btn btn-primary"
= render "devise/shared/links"
